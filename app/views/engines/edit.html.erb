<div id="container">
    <div class="col-lg-10 col-lg-offset-1 col-sm-10 col-sm-offset-1">
      <div class="row">
        <h2 class="col-sm-12">Edit Last Run For:</h2>
      </div>
<%= form_for :engine, url:{action: :update}, method: :put, html: {class: "form-horizontal"} do |f| %>

    <div class="form-group">
      <%= f.label "Engine Name", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <p class="form-control-static"><%= @engine.engineName%></p>
       </div>
    </div>
    
    <div class="form-group">
      <%= f.label "Users", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <p class="form-control-static"><%= @engine.users.map(&:username).join(", ") %></p>
      </div>
    </div>
  
    <div class="form-group">
      <%= f.label "Connections", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <p class="form-control-static"><%= @engine.connections.map(&:sessionName).join(", ") %></p>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label "Last Run", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.datetime_select :lastRun, value: @engine.lastRun %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Update", class: "btn btn-success" %>
      </div>
    </div>
    
<% end %>

<br>
<%= link_to "Back to Engines Index", root_path, class: "btn btn-primary" %>
  </div>
</div>

